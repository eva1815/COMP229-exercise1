<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <input type="hidden" name="id" value="<%= business._id %>" >
                <div class="form-group">
                    <label for="nameTextField">Your Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter Your Name"
                    name="name" 
                    value="<%= business.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Phone Number</label>
                    <input type="number" class="form-control"
                    id="authorTextField"
                    placeholder="Enter Your Phone Number"
                    name="number" 
                    value="<%= business.number %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Email Address</label>
                    <input type="text" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter Your Email Address"
                    name="address" 
                    value="<%= business.address %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Update</button>
                
                    <a href="/business-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Delete</a>

            </form>
        </div>

    </div>
</div>